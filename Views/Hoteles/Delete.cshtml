@model CRUDHoteles.Models.Hotele

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de eliminar este registro?</h3>
<div>
    <h4>Hotele</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Nombre</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HotelName)
        </dd>
        <dt class = "col-sm-2">Categoría</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <!--
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        -->
        <dt class="col-sm-2">Precio</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class = "col-sm-2">Foto 1</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto1)
        </dd>
        <dt class = "col-sm-2">Foto 2</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto2)
        </dd>
        <dt class = "col-sm-2">Foto 3</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto3)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-group mt-3">
            <input type="hidden" asp-for="HotelId" />
            <a asp-action="Index" style="text-decoration:none;">
                <input type="button" value="Volver" class="btn btn-danger" />
            </a>
            <input type="submit" value="Delete" class="btn btn-success" />
        </div>
    </form>

</div>
